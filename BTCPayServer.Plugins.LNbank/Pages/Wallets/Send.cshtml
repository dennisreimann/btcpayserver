@page "/plugins/lnbank/wallets/{walletId}/send/{handler?}"
@model BTCPayServer.Plugins.LNbank.Pages.Wallets.SendModel

@{
    ViewData.SetActivePage(LNbankNavPages.Send, "Send");
    var hasError = !string.IsNullOrEmpty(Model.ErrorMessage);
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<h2 class="mt-1 mb-4">
    @ViewData["Title"]
    <span class="badge bg-info d-inline-block ms-2 py-2 px-3">@Helpers.Sats(Model.Wallet.Balance)</span>
</h2>

@if (!ModelState.IsValid)
{
    <div asp-validation-summary="All" class="alert alert-danger mb-4"></div>
}

@if (hasError)
{
    <div class="alert alert-danger mb-4" role="alert">
        @Model.ErrorMessage
    </div>
}

<form method="post" asp-page-handler="@(Model.Bolt11 == null ? "decode" : "confirm")">
    @if (Model.Bolt11 == null)
    {
        <div class="form-group">
            <label asp-for="PaymentRequest" class="form-label" data-required></label>
            <textarea asp-for="PaymentRequest" class="form-control" rows="6" style="max-width:70ch;"></textarea>
            <span asp-validation-for="PaymentRequest" class="text-danger"></span>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary" id="LNbank-Decode">
                Decode payment request
            </button>
        </div>
    }
    else
    {
        <input asp-for="PaymentRequest" type="hidden" required/>
        <dl class="row mb-0">
            <dt>Amount</dt>
            <dd id="LNbank-Amount">@Helpers.Sats(Model.Bolt11.MinimumAmount)</dd>
            <dt>Expiry</dt>
            <dd>@Model.Bolt11.ExpiryDate.ToTimeAgo() (@Model.Bolt11.ExpiryDate)</dd>
            @if (hasError && !string.IsNullOrEmpty(Model.Bolt11.ShortDescription))
            {
                <dt>Description</dt>
                <dd id="LNbank-Description">@Model.Bolt11.ShortDescription</dd>
            }
        </dl>
        @if (!hasError)
        {
            <div class="form-group">
                <label asp-for="Description" class="form-label"></label>
                <input asp-for="Description" class="form-control" style="max-width:70ch;" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary" id="LNbank-Send">
                    Send @Helpers.Sats(Model.Bolt11.MinimumAmount)
                </button>
            </div>
        }
    }
</form>

<p class="mt-3">
    <a asp-page="./Index" asp-route-walletId="@Model.Wallet.WalletId" class="text-secondary" id="LNbank-Back">Back to Wallet</a>
</p>
