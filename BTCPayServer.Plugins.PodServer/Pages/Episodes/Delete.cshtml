@page "/plugins/podserver/podcasts/{podcastId}/episodes/{episodeId}delete"
@model BTCPayServer.Plugins.PodServer.Pages.Episodes.DeleteModel

@{
    ViewData.SetActivePage(PodServerNavPages.EditEpisode, Model.Episode.Title);
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<h2 class="mt-1 mb-4">@ViewData["Title"]</h2>

<p>Are you sure you want to delete this episode?</p>

<form method="post">
    <input type="submit" value="Delete" class="btn btn-danger" id="Delete" />
</form>

