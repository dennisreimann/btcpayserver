@page "/plugins/podserver/podcasts/{podcastId}/people/{personId}/edit"
@using BTCPayServer.Abstractions.Contracts
@model BTCPayServer.Plugins.PodServer.Pages.People.EditModel
@inject IFileService _fileService

@{
    ViewData.SetActivePage(PodServerNavPages.EditPerson, $"Edit {Model.Person.Name}");
}

<form method="post" enctype="multipart/form-data">
    <div class="sticky-header-setup"></div>
    <div class="sticky-header mb-l">
        <div class="d-sm-flex align-items-center justify-content-between mb-2 mb-lg-4">
            <h2 class="mb-0">
                <a asp-page="/Podcasts/Podcast" asp-route-podcastId="@Model.Person.PodcastId" class="unobtrusive-link">@ViewData["Title"]</a>
            </h2>
            <div class="d-flex gap-3 mt-3 mt-sm-0">
                <button type="submit" class="btn btn-primary" id="Save">Save</button>
            </div>
        </div>
        <partial name="_PodcastSettingsNav" model="Model.Person.PodcastId" />
    </div>
    
    <partial name="_StatusMessage" />

    <div class="row">
        <div class="col-xl-8 col-xxl-constrain">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Person.Name" class="form-label" data-required></label>
                <input asp-for="Person.Name" class="form-control" required/>
                <span asp-validation-for="Person.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Person.Email" class="form-label"></label>
                <input asp-for="Person.Email" class="form-control"/>
                <span asp-validation-for="Person.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Person.Url" class="form-label"></label>
                <input asp-for="Person.Url" class="form-control"/>
                <span asp-validation-for="Person.Url" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="ImageFile" class="form-label">Image</label>
                <input id="ImageFile" name="ImageFile" type="file" class="form-control">
            </div>
            @if (!string.IsNullOrEmpty(Model.Person.ImageFileId))
            {
                <img src="@(await _fileService.GetFileUrl(Request.GetAbsoluteRootUri(), Model.Person.ImageFileId))" alt="@Model.Person.Name" style="max-width: 200px;max-height: 200px;" class="d-block mt-3"/>
            }
        </div>
    </div>
</form>

<h3 class="mt-5 mb-4">Additional Actions</h3>
<div class="d-flex gap-3">
    <a id="DeletePerson" class="btn btn-outline-danger" asp-page="./Delete" asp-route-podcastId="@Model.Person.PodcastId" asp-route-personId="@Model.Person.PersonId">Remove this person</a>
</div>
